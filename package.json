{
  "name": "svh-cmdb",
  "version": "1.0.0",
  "description": "SVH Configuration Management Database System",
  "private": true,
  "dependencies": {
    "@azure/msal-browser": "^4.21.0",
    "@azure/msal-react": "^3.0.19",
    "date-fns": "^2.29.3",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.43.9",
    "react-router-dom": "^6.8.0",
    "react-scripts": "5.0.1",
    "react-table": "^7.8.0",
    "recharts": "^2.5.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.7"
  },
  "scripts": {
    "start": "concurrently -n APP,CSS -c blue,magenta \"react-scripts start\" \"npm run tailwind:watch\"",
    "build": "npm run tailwind:build && react-scripts build",
    "tailwind:build": "tailwindcss -i ./src/tailwind.input.css -o ./src/tailwind.css --minify",
    "tailwind:watch": "tailwindcss -i ./src/tailwind.input.css -o ./src/tailwind.css --watch",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
